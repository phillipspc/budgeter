<div class="modal" data-controller="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">
        <% if category.persisted? %>
          <%= "Edit \"#{category.name}\"" %>
        <% else %>
          <%= "New Category" %>
        <% end %>
      </p>
      <button class="delete" data-action="modal#close"></button>
    </header>
    <%= form_with model: category, url: url do |f| %>
      <section class="modal-card-body">
        <div class="field">
          <%= f.text_field :name, class: "input" %>
        </div>
      </section>
      <footer class="modal-card-foot">
        <%= f.submit "Save", class: "button is-success" %>
      </footer>
    <% end %>
  </div>
  <button class="modal-close is-large" data-action="modal#close"></button>
</div>
