<section class="section">
  <div class="container">
    <h1 class="title">
      Categories
      <%= link_to "New Category", new_category_path, class: "button is-link is-pulled-right", remote: true %>
    </h1>

    <div class="columns">
      <div class="column is-6 is-offset-3">
        <% @categories.each do |category| %>
          <div data-category-id="<%= category.id %>">
            <%= render category %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div data-container-for='modal'></div>
