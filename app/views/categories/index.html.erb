<section class="section">
  <div class="container">
    <h1 class="title visible-tablet-portrait-up">
      Categories

      <%= link_to new_category_path, class: "button is-primary is-pulled-right", remote: true do %>
        <span class="icon">
          <i class="fas fa-plus"></i>
        </span>
        <span>New Category</span>
      <% end %>

      <% if @manager.has_plaid_access? && @manager.has_linked_bank_account? %>
        <%= link_to plaid_categories_path, class: "button is-success is-pulled-right m-r-sm" do %>
          <span class="icon">
            <i class="fas fa-sitemap"></i>
          </span>
          <span>Map Imported Categories</span>
        <% end %>
      <% end %>
    </h1>

    <h1 class="title visible-phone-only is-size-5">
      Categories

      <%= link_to new_category_path, class: "button is-primary is-pulled-right", remote: true do %>
        <span class="icon">
          <i class="fas fa-plus"></i>
        </span>
        <span>New</span>
      <% end %>

      <% if @manager.has_plaid_access? && @manager.has_linked_bank_account? %>
        <%= link_to plaid_categories_path, class: "button is-success is-pulled-right m-r-sm" do %>
          <span class="icon">
            <i class="fas fa-sitemap"></i>
          </span>
          <span>Map</span>
        <% end %>
      <% end %>
    </h1>

    <% @categories.each_with_index do |category, i| %>
      <table class="category table is-striped is-bordered is-fullwidth" data-controller="accordion"
        data-category-id="<%= category.id %>">
        <%= render category, collapsed: (i != 0) %>
      </table>
    <% end %>

  </div>
</section>
