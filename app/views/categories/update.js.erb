(function() {
  document.querySelector("[data-container-for='modal'] .modal").classList.remove("is-active")

  const div = document.querySelector("[data-category-id='<%= @category.id %>']")
  if (div.querySelector("tbody.collapsed")) {
    div.innerHTML = "<%= j render @category, collapsed: true %>"
  } else {
    div.innerHTML = "<%= j render @category, collapsed: false %>"
  }
})()

