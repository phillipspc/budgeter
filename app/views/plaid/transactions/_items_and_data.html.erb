<% @items_and_data.each do |item_name, data| %>
  <div class="box">
    <div class="level">
      <div class="level-left">
        <span class="level-item is-size-5"><%= item_name %></span>
      </div>
      <div class="level-right">
        <span class="level-item is-size-6 is-italics">Last Import: <%= import_time(data[:imported_at]) %></span>
      </div>
    </div>

    <%= render "plaid/transactions/table_tablet_up", transactions: data[:transactions] %>
    <%= render "plaid/transactions/table_phone_only", transactions: data[:transactions] %>

  </div>
  <br>
<% end %>
