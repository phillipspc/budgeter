<%= form_with model: @transaction do |f| %>
  <div class="columns">
    <div class="field column">
      <div class="control">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input" %>
      </div>
    </div>

    <div class="field column">
      <div class="control">
        <%= f.label :amount, class: "label" %>
        <%= f.number_field :amount, class: "input" %>
      </div>
    </div>

    <div class="field column">
      <div class="control">
        <%= f.label :category_id, class: 'label' %>
        <div class="select is-fullwidth">
          <%= f.select :category_id, Category.all.pluck(:name, :id), include_blank: true %>
        </div>
      </div>
    </div>

    <div class="field column">
      <div class="control">
        <%= f.label :date, class: "label" %>
        <%= f.text_field :date, class: "input", value: Date.today,
              data: { controller: "datepicker" } %>
      </div>

    </div>
  </div>

  <%= f.submit "Save", class: "button is-success" %>

<% end %>
