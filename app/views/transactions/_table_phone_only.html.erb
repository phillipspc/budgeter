<table class="table is-fullwidth is-narrow visible-phone-only">
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Amount</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <div class="is-size-7">
            <%= transaction.name %>
          </div>
          <div class="is-size-7">
            <% unless local_assigns[:hide_category] %>
              <%= link_to transaction.category.name, category_path(transaction.category, month: @month) %> -
            <% end %>
            <%= transaction.sub_category.name %>
          </div>
          <div class="is-size-7 has-text-grey">
            <%= transaction.date %>
          </div>
        </td>
        <td class="is-size-6"><%= number_to_currency transaction.amount %></td>
        <td class="has-text-centered">
          <%= link_to edit_transaction_path(transaction, redirect_url: redirect_url),
                remote: true do %>
            <span class="icon">
              <i class="far fa-edit"></i>
            </span>
          <% end %>
          <%= link_to transaction_path(transaction), method: :delete, data: {
                controller: "link", action: "link#confirm",
                "link-confirm-message" => "Are you sure you wish to delete this transaction?"
              } do %>
            <span class="icon">
              <i class="far fa-trash-alt"></i>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
